form(action="", method="POST")
    div(class="flex flex-wrap space-y-5")
        div(class="w-full md:w-1/3 space-y-5 md:p-5")
            div
                label(class="block text-gray-700 text-sm font-bold mb-2", for="name") Name
                input(type="text", name="name", value=tenant ? tenant.name : "" , placeholder="Tenant Name", id="name", class="shadow appearance-none border rounded w-full p-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", required)

            div
                label(class="block text-gray-700 text-sm font-bold mb-2", for="slug") Slug
                input(type="text", name="slug", value=tenant ? tenant.slug : "" placeholder="Tenant slug", id="slug", class="shadow appearance-none border rounded w-full p-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", required)

            div
                label(class="block text-gray-700 text-sm font-bold mb-2", for="base_url") Base URL
                input(type="url", name="base_url", value=tenant ? tenant.base_url : "" placeholder="Tenant base url", id="base_url" class="shadow appearance-none border rounded w-full p-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", required)

        div(class="w-full md:w-2/3 space-y-5 md:p-5")
            div
                label(class="block text-gray-700 text-sm font-bold mb-2", for="registry") Registry (JSON)
                textarea(name="registry",placeholder="Tenant registry", id="registry", class="h-40 resize-none shadow appearance-none border rounded w-full p-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline").
                    #{tenant ? tenant.registry : ""}

            div
                label(class="block text-gray-700 text-sm font-bold mb-2", for="config") Config (JSON)
                textarea(name="config", placeholder="Tenant config", id="config", class="h-40 resize-none shadow appearance-none border rounded w-full p-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline").
                    #{value=tenant ? tenant.config : ""}

    div
        button(class="block w-full bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline", type="submit").
            #{tenant ? "Update" : "Create"} Tenant